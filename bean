import discord
import os

client = discord.Client()

@client.event
async def on_ready():
    print('We have logged in as {0.user}'.format(client))
    await client.change_presence(activity=discord.Game(name="Nigger Game HD 4k"))
@client.event
async def on_message(message):
    if message.content.startswith('!'):
        print(message.content)
    if message.content.startswith('!help') or message.content.startswith('$help'):
        if message.author == client.user:
            await message.delete()
        embed = discord.Embed(title="Commands", description="Here's a list of all of the commands I can do!", color=0x2500cc)
        embed.add_field(name="!help", value="Gives you a help list.", inline=False)
        embed.add_field(name="!flood", value="Floods a channel. Use !flood {message} {amount}.", inline=False)
        embed.add_field(name="!play", value="!play <song>. plays the song of your choice.", inline=False)
        embed.add_field(name="!dmspam", value="Floods a DM. Use !dmspam {id} {message} {amount}", inline=False)
        embed.add_field(name="!clearchat", value="Clears the chat. *WELL", inline=False)
        embed.add_field(name="!leave", value="Leave the voice chat", inline=False)
        embed.add_field(name="!stop", value="Stop the damn music", inline=False)
        embed.add_field(name="SONG LIST", value="rickroll, ligma, dimmadome, indianmusic, earrape, holiday, nig, ping, wideputin, lookatthisdude", inline=False)
        await message.channel.send(embed=embed)
    if message.content.startswith('!clearchat') or message.content.startswith('!cc'):
        ccmsg = "."
        for c in range(0, 900, 1):
            ccmsg = ccmsg + " \n"
        ccmsg = ccmsg + "Gone, reduced to atoms."
        await message.channel.send(ccmsg)

    if message.content.startswith('!flood'):
        if message.author == client.user:
            await message.delete()
        async with message.channel.typing():
            for i in range(0, int(message.content.split(" ")[2]), 1):
                await message.channel.send(message.content.split(" ")[1])
    if message.content.startswith('!gotcha'):
        if message.author == client.user:
            await message.delete()
        await message.channel.send("Okay gotcha.")
        channel = message.author.voice.channel
    if message.content.startswith('!play'):
        if message.author == client.user:
            await message.delete()
        if message.content.split(' ')[1] == "earrape":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe",source="earrape1.mp3"))
        elif message.content.split(' ')[1] == "rickroll":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="rick_astley.mp3"))
        elif message.content.split(' ')[1] == "dimmadome":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="dimmadome.mp3"))
        elif message.content.split(' ')[1] == "indianmusic":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="indianmusic.mp3"))
        elif message.content.split(' ')[1] == "holiday":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="holiday.mp3"))
        elif message.content.split(' ')[1] == "nig":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="nig.mp3"))
        elif message.content.split(' ')[1] == "ligma":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe", source="ligma.mp3"))
        elif message.content.split(' ')[1] == "lookatthisdude":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe",source="lookatthisdude.mp3"))
        elif message.content.split(' ')[1] == "wideputin":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe",source="wideputin.mp3"))
        elif message.content.split(' ')[1] == "ping":
            channel = message.author.voice.channel
            vc = message.guild.voice_client
            if message.guild.voice_client == None:
                vc = await channel.connect()
            vc.play(discord.FFmpegPCMAudio(executable="C:/Users/holla_rqzsd5u/Desktop/ffmpeg-4.3.1-2020-11-19-full_build/bin/ffmpeg.exe",source="ping.mp3"))
    if message.content.startswith("!stop"):
        if message.author == client.user:
            await message.delete()
        channel = message.author.voice.channel
        vc = message.guild.voice_client
        if message.guild.voice_client == None:
            vc = await channel.connect()
        await vc.stop()
    if message.content.startswith("!leave"):
        if message.author == client.user:
            await message.delete()
        server = message.guild.voice_client
        await server.disconnect()
    if message.content.startswith("!dmspam"):
        if message.author == client.user:
            await message.delete()
        if len(message.content.split(" ")) > 2:
            user = client.get_user(int(message.content.split(" ")[1]))
            dm = await user.create_dm()
            for i in range(0, int(message.content.split(" ")[3]), 1):
                await dm.send(message.content.split(" ")[2])
                print("Sent DM to: " + message.content.split(" ")[2])
client.run('NjY1Njg3ODI4MTEzNTIyNzQ4.X9mIUw.1u5H-GMrnjwFY_4P4u4SB959vZc', bot=False) //token
